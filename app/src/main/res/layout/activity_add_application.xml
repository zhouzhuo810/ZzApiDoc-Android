<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrayBg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_title_height"
        android:background="@color/colorMain">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/add_app_text"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/activity_title_text_size" />

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="160px"
            android:layout_height="match_parent"
            android:background="@drawable/btn_main_selector"
            android:clickable="true">

            <ImageView
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_centerInParent="true"
                android:src="@drawable/back" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_right"
            android:layout_width="200px"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_main_selector"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/import_json_text"
                android:textColor="@color/colorWhite"
                android:textSize="40px" />
        </RelativeLayout>
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:paddingBottom="20px"
                android:paddingTop="20px">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40px"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="@string/app_logo_text"
                    android:textColor="#415868"
                    android:textSize="44px" />

                <ImageView
                    android:id="@+id/iv_logo"
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:layout_marginLeft="40px"
                    android:layout_marginRight="40px"
                    android:src="@drawable/ic_add"
                    app:layout_auto_baseheight="width" />
            </LinearLayout>

            <!--备注-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:minHeight="130px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="280px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40px"
                    android:gravity="center|left"
                    android:text="@string/app_name_text"
                    android:textColor="#415868"
                    android:textSize="44px" />

                <EditText
                    android:id="@+id/et_app_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:hint="@string/app_name_hint_text"
                    android:textColor="@color/colorBlack"
                    android:textSize="44px" />

                <ImageView
                    android:id="@+id/iv_clear_app_name"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_marginRight="30px"
                    android:src="@drawable/clear"
                    android:visibility="gone" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="30px"
                android:background="@color/colorGrayBg" />

            <!--备注-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:minHeight="130px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="280px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40px"
                    android:gravity="center|left"
                    android:text="@string/project_name_text"
                    android:textColor="#415868"
                    android:textSize="44px" />

                <EditText
                    android:id="@+id/et_project_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:hint="@string/project_name_hint_text"
                    android:textColor="@color/colorBlack"
                    android:textSize="44px" />

                <ImageView
                    android:id="@+id/iv_clear_project_name"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_marginRight="30px"
                    android:src="@drawable/clear"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btn_key_word"
                    android:layout_width="100px"
                    android:layout_height="60px"
                    android:layout_marginRight="30px"
                    android:background="@drawable/btn_save_selector"
                    android:text="生成"
                    android:textColor="@color/colorWhite"
                    android:textSize="30px" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="30px"
                android:background="@color/colorGrayBg" />
            <!--备注-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:minHeight="130px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="280px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40px"
                    android:gravity="center|left"
                    android:text="@string/package_name_text"
                    android:textColor="#415868"
                    android:textSize="44px" />

                <EditText
                    android:id="@+id/et_package_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:hint="@string/package_name_hint_text"
                    android:textColor="@color/colorBlack"
                    android:textSize="44px" />

                <ImageView
                    android:id="@+id/iv_clear_package_name"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_marginRight="30px"
                    android:src="@drawable/clear"
                    android:visibility="gone" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="30px"
                android:background="@color/colorGrayBg" />
            <!--备注-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:minHeight="130px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="280px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40px"
                    android:gravity="center|left"
                    android:text="@string/vercion_code_text"
                    android:textColor="#415868"
                    android:textSize="44px" />

                <EditText
                    android:id="@+id/et_vercion_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:hint="@string/vercion_code_hint_text"
                    android:inputType="number"
                    android:text="1"
                    android:textColor="@color/colorBlack"
                    android:textSize="44px" />

                <ImageView
                    android:id="@+id/iv_clear_vercion_code"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_marginRight="30px"
                    android:src="@drawable/clear"
                    android:visibility="gone" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="30px"
                android:background="@color/colorGrayBg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:minHeight="130px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="280px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40px"
                    android:gravity="center|left"
                    android:text="@string/vercion_name_text"
                    android:textColor="#415868"
                    android:textSize="44px" />

                <EditText
                    android:id="@+id/et_vercion_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:hint="@string/vercion_name_hint_text"
                    android:text="1.0"
                    android:textColor="@color/colorBlack"
                    android:textSize="44px" />

                <ImageView
                    android:id="@+id/iv_clear_vercion_name"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_marginRight="30px"
                    android:src="@drawable/clear"
                    android:visibility="gone" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="30px"
                android:background="@color/colorGrayBg" />

            <!--备注-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:minHeight="130px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="280px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40px"
                    android:gravity="center|left"
                    android:text="@string/min_sdk_text"
                    android:textColor="#415868"
                    android:textSize="44px" />

                <EditText
                    android:id="@+id/et_min_sdk"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:hint="@string/min_sdk_hint_text"
                    android:inputType="number"
                    android:text="15"
                    android:textColor="@color/colorBlack"
                    android:textSize="44px" />

                <ImageView
                    android:id="@+id/iv_clear_min_sdk"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_marginRight="30px"
                    android:src="@drawable/clear"
                    android:visibility="gone" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="30px"
                android:background="@color/colorGrayBg" />

            <!--备注-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:minHeight="130px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="280px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40px"
                    android:gravity="center|left"
                    android:text="@string/target_sdk_text"
                    android:textColor="#415868"
                    android:textSize="44px" />

                <EditText
                    android:id="@+id/et_target_sdk"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:hint="@string/target_sdk_hint_text"
                    android:inputType="number"
                    android:text="25"
                    android:textColor="@color/colorBlack"
                    android:textSize="44px" />

                <ImageView
                    android:id="@+id/iv_clear_target_sdk"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_marginRight="30px"
                    android:src="@drawable/clear"
                    android:visibility="gone" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="30px"
                android:background="@color/colorGrayBg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:minHeight="130px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="280px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40px"
                    android:gravity="center|left"
                    android:text="@string/compile_sdk_text"
                    android:textColor="#415868"
                    android:textSize="44px" />

                <EditText
                    android:id="@+id/et_compile_sdk"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:hint="@string/compile_sdk_hint_text"
                    android:inputType="number"
                    android:text="25"
                    android:textColor="@color/colorBlack"
                    android:textSize="44px" />

                <ImageView
                    android:id="@+id/iv_clear_compile_sdk"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_marginRight="30px"
                    android:src="@drawable/clear"
                    android:visibility="gone" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="30px"
                android:background="@color/colorGrayBg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:minHeight="130px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="280px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40px"
                    android:gravity="center|left"
                    android:text="@string/main_color_text"
                    android:textColor="#415868"
                    android:textSize="44px" />

                <EditText
                    android:id="@+id/et_main_color"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:hint="@string/main_color_hint_text"
                    android:maxLength="8"
                    android:textColor="@color/colorBlack"
                    android:textSize="44px" />

                <ImageView
                    android:id="@+id/iv_clear_main_color"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_marginRight="30px"
                    android:src="@drawable/clear"
                    android:visibility="gone" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="30px"
                android:background="@color/colorGrayBg" />

            <!--签订日期-->

            <LinearLayout
                android:id="@+id/ll_api"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_item_bg_selector"
                android:clickable="true"
                android:gravity="center_vertical"
                android:minHeight="130px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="280px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40px"
                    android:gravity="center|left"
                    android:text="@string/api_text"
                    android:textColor="#415868"
                    android:textSize="44px" />

                <TextView
                    android:id="@+id/tv_api"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:hint="@string/choose_api_hint"
                    android:textColor="@color/colorBlack"
                    android:textSize="44px" />

                <ImageView
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:layout_marginRight="30px"
                    android:src="@drawable/more" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="30px"
                android:background="@color/colorGrayBg" />

            <!--签订日期-->

            <LinearLayout
                android:id="@+id/ll_qrcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_item_bg_selector"
                android:clickable="true"
                android:gravity="center_vertical"
                android:minHeight="130px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40px"
                    android:gravity="center|left"
                    android:text="@string/qrcode_text"
                    android:textColor="#415868"
                    android:textSize="44px" />


                <CheckBox
                    android:id="@+id/cb_qrcode"
                    android:layout_width="99px"
                    android:layout_height="75px"
                    android:checked="false"
                    android:layout_marginRight="40px"
                    android:background="@drawable/cb_selector"
                    android:button="@null"
                    app:layout_auto_baseheight="width" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="30px"
                android:background="@color/colorGrayBg" />


            <!--签订日期-->

            <LinearLayout
                android:id="@+id/ll_multidex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_item_bg_selector"
                android:clickable="true"
                android:gravity="center_vertical"
                android:minHeight="130px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40px"
                    android:gravity="center|left"
                    android:text="@string/multidex_text"
                    android:textColor="#415868"
                    android:textSize="44px" />


                <CheckBox
                    android:id="@+id/cb_multidex"
                    android:layout_width="99px"
                    android:layout_height="75px"
                    android:checked="false"
                    android:layout_marginRight="40px"
                    android:background="@drawable/cb_selector"
                    android:button="@null"
                    app:layout_auto_baseheight="width" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="30px"
                android:background="@color/colorGrayBg" />

            <LinearLayout
                android:id="@+id/ll_minify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_item_bg_selector"
                android:clickable="true"
                android:gravity="center_vertical"
                android:minHeight="130px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40px"
                    android:gravity="center|left"
                    android:text="@string/minify_text"
                    android:textColor="#415868"
                    android:textSize="44px" />


                <CheckBox
                    android:id="@+id/cb_minify"
                    android:layout_width="99px"
                    android:layout_height="75px"
                    android:checked="false"
                    android:layout_marginRight="40px"
                    android:background="@drawable/cb_selector"
                    android:button="@null"
                    app:layout_auto_baseheight="width" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="30px"
                android:background="@color/colorGrayBg" />


            <!--备注-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:minHeight="130px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="280px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40px"
                    android:gravity="center|left"
                    android:text="@string/ps_text"
                    android:textColor="#415868"
                    android:textSize="44px" />

                <EditText
                    android:id="@+id/et_ps"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:hint="@string/ps_hint_text"
                    android:textColor="@color/colorBlack"
                    android:textSize="44px" />

                <ImageView
                    android:id="@+id/iv_clear_ps"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_marginRight="30px"
                    android:src="@drawable/clear"
                    android:visibility="gone" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="30px"
                android:background="@color/colorGrayBg" />

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:layout_marginBottom="40px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:layout_marginTop="40px"
                android:background="@drawable/btn_save_selector"
                android:gravity="center"
                android:text="@string/submit_text"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/activity_title_text_size" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>