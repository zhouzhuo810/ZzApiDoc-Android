<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_title_height"
        android:background="@color/colorMain">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/add_action_text"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/activity_title_text_size" />

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="160px"
            android:layout_height="match_parent"
            android:background="@drawable/btn_main_selector"
            android:clickable="true">

            <ImageView
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_centerInParent="true"
                android:src="@drawable/back" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_right"
            android:layout_width="160px"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_main_selector"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/colorWhite"
                android:textSize="40px" />
        </RelativeLayout>
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--签订日期-->

            <LinearLayout
                android:id="@+id/ll_action_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_item_bg_selector"
                android:clickable="true"
                android:gravity="center_vertical"
                android:minHeight="130px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="280px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40px"
                    android:gravity="center|left"
                    android:text="@string/action_type_text"
                    android:textColor="#415868"
                    android:textSize="44px" />

                <TextView
                    android:id="@+id/tv_action_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="@string/choose_action_type_hint"
                    android:textColor="@color/colorBlack"
                    android:textSize="44px" />

                <ImageView
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:layout_marginRight="30px"
                    android:src="@drawable/more" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="30px"
                android:background="@color/colorGrayBg" />

            <!--签订日期-->

            <LinearLayout
                android:id="@+id/ll_target_api"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_item_bg_selector"
                android:clickable="true"
                android:gravity="center_vertical"
                android:minHeight="130px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="280px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40px"
                    android:gravity="center|left"
                    android:text="@string/target_api_text"
                    android:textColor="#415868"
                    android:textSize="44px" />

                <TextView
                    android:id="@+id/tv_target_api"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="@string/choose_target_api_hint"
                    android:textColor="@color/colorBlack"
                    android:textSize="44px" />

                <ImageView
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:layout_marginRight="30px"
                    android:src="@drawable/more" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="30px"
                android:background="@color/colorGrayBg" />


            <!--签订日期-->

            <LinearLayout
                android:id="@+id/ll_target_act"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_item_bg_selector"
                android:clickable="true"
                android:gravity="center_vertical"
                android:minHeight="130px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="280px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40px"
                    android:gravity="center|left"
                    android:text="@string/target_act_text"
                    android:textColor="#415868"
                    android:textSize="44px" />

                <TextView
                    android:id="@+id/tv_target_act"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="@string/choose_target_act_hint"
                    android:textColor="@color/colorBlack"
                    android:textSize="44px" />

                <ImageView
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:layout_marginRight="30px"
                    android:src="@drawable/more" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="30px"
                android:background="@color/colorGrayBg" />


            <!--备注-->
            <LinearLayout
                android:id="@+id/ll_title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:minHeight="130px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="280px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40px"
                    android:gravity="center|left"
                    android:text="@string/title_text"
                    android:textColor="#415868"
                    android:textSize="44px" />

                <EditText
                    android:id="@+id/et_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="@string/title_hint_text"
                    android:textColor="@color/colorBlack"
                    android:textSize="44px" />

                <ImageView
                    android:id="@+id/iv_clear_title"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_marginRight="30px"
                    android:src="@drawable/clear"
                    android:visibility="gone" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="30px"
                android:background="@color/colorGrayBg" />


            <!--备注-->
            <LinearLayout
                android:id="@+id/ll_msg_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:minHeight="130px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="280px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40px"
                    android:gravity="center|left"
                    android:text="@string/msg_text"
                    android:textColor="#415868"
                    android:textSize="44px" />

                <EditText
                    android:id="@+id/et_msg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="@string/msg_hint_text"
                    android:textColor="@color/colorBlack"
                    android:textSize="44px" />

                <ImageView
                    android:id="@+id/iv_clear_msg"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_marginRight="30px"
                    android:src="@drawable/clear"
                    android:visibility="gone" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="30px"
                android:background="@color/colorGrayBg" />


            <!--备注-->
            <LinearLayout
                android:id="@+id/ll_ok_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:minHeight="130px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="280px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40px"
                    android:gravity="center|left"
                    android:text="@string/ok_text_text"
                    android:textColor="#415868"
                    android:textSize="44px" />

                <EditText
                    android:id="@+id/et_ok_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="@string/ok_text_hint_text"
                    android:text="确定"
                    android:textColor="@color/colorBlack"
                    android:textSize="44px" />

                <ImageView
                    android:id="@+id/iv_clear_ok_text"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_marginRight="30px"
                    android:src="@drawable/clear" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="30px"
                android:background="@color/colorGrayBg" />


            <!--备注-->
            <LinearLayout
                android:id="@+id/ll_cancel_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:minHeight="130px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="280px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40px"
                    android:gravity="center|left"
                    android:text="@string/cancel_text_text"
                    android:textColor="#415868"
                    android:textSize="44px" />

                <EditText
                    android:id="@+id/et_cancel_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="@string/cancel_text_hint_text"
                    android:text="取消"
                    android:textColor="@color/colorBlack"
                    android:textSize="44px" />

                <ImageView
                    android:id="@+id/iv_clear_cancel_text"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_marginRight="30px"
                    android:src="@drawable/clear" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="30px"
                android:background="@color/colorGrayBg" />

            <!--备注-->
            <LinearLayout
                android:id="@+id/ll_hint_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:minHeight="130px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="280px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40px"
                    android:gravity="center|left"
                    android:text="@string/hint_text_text"
                    android:textColor="#415868"
                    android:textSize="44px" />

                <EditText
                    android:id="@+id/et_hint_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="@string/hint_text_hint_text"
                    android:textColor="@color/colorBlack"
                    android:textSize="44px" />

                <ImageView
                    android:id="@+id/iv_clear_hint_text"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_marginRight="30px"
                    android:src="@drawable/clear"
                    android:visibility="gone" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="30px"
                android:background="@color/colorGrayBg" />


            <!--备注-->
            <LinearLayout
                android:id="@+id/ll_def_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:minHeight="130px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="280px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40px"
                    android:gravity="center|left"
                    android:text="@string/def_value_text"
                    android:textColor="#415868"
                    android:textSize="44px" />

                <EditText
                    android:id="@+id/et_def_value_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="@string/def_value_hint_text"
                    android:textColor="@color/colorBlack"
                    android:textSize="44px" />

                <ImageView
                    android:id="@+id/iv_clear_def_value_text"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_marginRight="30px"
                    android:src="@drawable/clear"
                    android:visibility="gone" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="30px"
                android:background="@color/colorGrayBg" />


            <!--备注-->
            <LinearLayout
                android:id="@+id/ll_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:minHeight="130px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="280px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40px"
                    android:gravity="center|left"
                    android:text="@string/items_text"
                    android:textColor="#415868"
                    android:textSize="44px" />

                <EditText
                    android:id="@+id/et_items"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="@string/items_hint_text"
                    android:textColor="@color/colorBlack"
                    android:textSize="44px" />

                <ImageView
                    android:id="@+id/iv_clear_items"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_marginRight="30px"
                    android:src="@drawable/clear"
                    android:visibility="gone" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="30px"
                android:background="@color/colorGrayBg" />

            <!--签订日期-->

            <LinearLayout
                android:id="@+id/ll_show_or_hide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_item_bg_selector"
                android:clickable="true"
                android:gravity="center_vertical"
                android:minHeight="130px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40px"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="@string/show_or_hide_text"
                    android:textColor="#415868"
                    android:textSize="44px" />


                <CheckBox
                    android:id="@+id/cb_show_or_hide"
                    android:layout_width="99px"
                    android:layout_height="75px"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="40px"
                    android:background="@drawable/cb_selector"
                    android:button="@null"
                    android:checked="false"
                    app:layout_auto_baseheight="width" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="30px"
                android:background="@color/colorGrayBg" />


        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_marginBottom="30px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="30px"
        android:background="@drawable/btn_save_selector"
        android:gravity="center"
        android:text="@string/submit_text"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/activity_title_text_size" />
</LinearLayout>