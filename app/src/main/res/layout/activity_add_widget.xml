                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_item_bg_selector"
                android:clickable="true"
                android:gravity="center_vertical"
                android:minHeight="130px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="280px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40px"
                    android:gravity="center|left"
                    android:text="@string/show_right_layout_text"
                    android:textColor="#415868"
                    android:textSize="44px" />

                <TextView
                    android:id="@+id/tv_show_right_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="@string/choose_show_right_layout_hint"
                    android:text="false"
                    android:textColor="@color/colorBlack"
                    android:textSize="44px" />

                <ImageView
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:layout_marginRight="30px"
                    android:src="@drawable/more" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="30px"
                android:background="@color/colorGrayBg" />


            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:layout_marginBottom="40px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:layout_marginTop="40px"
                android:background="@drawable/btn_save_selector"
                android:gravity="center"
                android:text="@string/submit_text"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/activity_title_text_size" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>