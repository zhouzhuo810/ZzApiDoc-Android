<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMain">

        <ImageView
            android:id="@+id/iv_setting"
            android:layout_width="120px"
            android:layout_height="120px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40px"
            android:layout_marginTop="50px"
            android:src="@drawable/me_setting" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@color/colorMain"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200px"
            android:layout_height="200px"
            android:scaleType="fitXY"
            android:src="@mipmap/logo"
            app:layout_auto_baseheight="width" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_marginTop="50px"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/colorWhite"
            android:textSize="60px"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="100px"
        android:layout_marginRight="100px"
        android:layout_weight="7"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px">

            <AutoCompleteTextView
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/et_bg_line"
                android:completionThreshold="1"
                android:hint="@string/phone_hint_text"
                android:inputType="phone"
                android:paddingLeft="20px"
                android:paddingRight="120px"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorMain"
                android:textSize="40px" />

            <ImageView
                android:id="@+id/iv_clear_phone"
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30px"
                android:src="@drawable/clear"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_marginTop="20px">

            <EditText
                android:id="@+id/et_pswd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/et_bg_line"
                android:hint="@string/pswd_hint_text"
                android:paddingLeft="20px"
                android:paddingRight="120px"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorMain"
                android:textSize="40px" />

            <ImageView
                android:id="@+id/iv_clear_pswd"
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30px"
                android:src="@drawable/clear"
                android:visibility="gone" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_marginTop="90px"
            android:background="@drawable/btn_save_selector"
            android:text="@string/login_text"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/activity_title_text_size" />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_marginTop="40px"
            android:background="@drawable/btn_exit_selector"
            android:text="@string/register_text"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/activity_title_text_size" />
    </LinearLayout>
</LinearLayout>